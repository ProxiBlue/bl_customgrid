    {
        var template = new Template(urlTemplate, customGridTemplateSyntax);
        setLocation(template.evaluate({type: $F(typeElement)}));
    }
    
    Event.observe(window, 'load', function(){
        var objName = '<?php echo $this->getSelectedTabId() ?>';
        if (objName) {
