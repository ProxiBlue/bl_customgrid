<?php if ($this->getIsAjaxMode()): ?>
<?php $_wrapperId = $this->helper('core')->uniqHash('blcg-ajax-messages-wrapper-') ?>
<div id="<?php echo $_wrapperId ?>">
<?php foreach ($this->getMessagesTypes() as $_type => $_label): ?>
    <?php if ($this->hasMessages($_type)): ?>
        <li class="no-display blcg-messages-list-wrapper blcg-messages-list-wrapper-<?php echo $_type ?>">
            <div class="blcg-messages-list"><?php echo $this->getMessagesHtml($_type) ?></div>
        </li>
    <?php endif ?>
<?php endforeach ?>
</div>
<?php else: ?>
<div id="blcg-messages-wrapper" class="blcg-messages-wrapper">
    <ul class="blcg-messages-tabs">
    <?php $_counts = array(); ?>
    <?php foreach ($this->getMessagesTypes() as $_type => $_label): ?>
        <li id="blcg-messages-tab-<?php echo $_type ?>" class="blcg-messages-tab blcg-messages-tab-<?php echo $_type ?><?php if (!$_count = $this->getMessagesCount($_type)): ?> no-display<?php endif ?>"><?php echo $this->htmlEscape($_label) ?> (<span id="blcg-messages-tab-count-<?php echo $_type ?>"><?php echo $_count ?></span>)</li>
    <?php endforeach ?>
    </ul>
    <ul class="blcg-messages-lists">
    <?php foreach ($this->getMessagesTypes() as $_type => $_label): ?>
        <li id="blcg-messages-list-wrapper-<?php echo $_type ?>" class="no-display blcg-messages-list-wrapper blcg-messages-list-wrapper-<?php echo $_type ?>">
            <div class="blcg-messages-list"><?php echo $this->getMessagesHtml($_type) ?></div>
        </li>
    <?php endforeach ?>
    </ul>
</div>
<?php endif ?>
<script type="text/javascript">
